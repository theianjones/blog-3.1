{
  "name": "remix-starter-vercel",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "predeploy": "remix build",
    "deploy": "vercel",
    "start": "concurrently \"remix run\" \"vercel dev\" \"css:watch\"",
    "css:watch": "postcss styles --base styles --dir app/ -w",
    "css:build": "postcss styles --base styles --dir app/ --env production"
  },
  "dependencies": {
    "@remix-run/cli": "^0.10.0",
    "@remix-run/data": "^0.10.0",
    "@remix-run/react": "^0.10.0",
    "@remix-run/vercel": "^0.10.0",
    "@vercel/node": "1.8.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router": "^6.0.0-beta.0",
    "react-router-dom": "^6.0.0-beta.0",
    "tailwindcss": "^2.0.2"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "concurrently": "^5.3.0",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "typescript": "^4.1.2",
    "vercel": "^21.2.1"
  },
  "engines": {
    "node": "12"
  }
}
